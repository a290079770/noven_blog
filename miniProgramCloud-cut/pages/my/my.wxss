.my {
	min-height: 100vh;
}

.my-content {
	margin: 0 auto;
    width: 640rpx;
    min-height: 300rpx;
}


.my-published {
	margin-top: 40rpx;
	height: 150rpx;
}

.my-published-item {
	width: 300rpx;
	height: 100%;
	background: rgba(118,143,195,0.1);
}

.my-published-item-left,.my-published-item-right {
	width: 50%;
	height: 100%;
	font-size: 24rpx;
}

.my-published-item-right {
	transform: translateX(-30rpx);
    flex-direction: column;
}

.my-published-item-right text {
	margin: 5rpx 0;
}

.my-published-item-img {
	width: 80rpx;
	height: 80rpx;
}

.my-published-item-number {
	font-size: 38rpx;
}

.my-oparate-item {
	justify-content: flex-start;
	width: 100%;
	height: 100rpx;
	font-size: 28rpx;
}

.my-oparate-item-1 {
	margin-top: 36rpx;
}

.my-oparate-item-icon {
	margin-right: 20rpx;
	width: 28rpx;
	height: 28rpx;
}


.my-footer-place {
    height: 250rpx;
}

.my-footer {
	position: absolute;
	bottom: 0;
	left: 0;
	width: 100%;
}
.mg-letf20 {
  margin-left: 20rpx;
}
.detail-title {
  font-size: 40rpx;
  text-align: center;
  line-height: 60rpx;
}
.about-article {
  text-align: center;
  font-size: 30rpx;
  line-height: 60rpx;
}
.article {
  color: rgb(17, 173, 95);
}
.author {
  color: brown;
}
.time {
  font-family: STLiti,NSimSun,"Times New Roman",Georgia,Serif;
  color: rgb(10, 10, 143);
}
.tongji-wrap, .is-collection {
  display: flex;
  justify-content: center;
  align-items: center;
  /* flex-direction: column; */
  font-size: 30rpx;
  color:  rgb(73, 25, 15);
}
.reading {
  margin-left: 40rpx;
}
.detail-image-wrap {
  margin-top: 30rpx;
  padding: 0 30rpx;
  height: 400rpx;
}
.detail-image {
  width: 100%;
  height: 100%;
}
.detail-text {
  margin-top: 30rpx;
  padding: 0 30rpx 40rpx;
  text-indent: 60rpx;
  color: rgb(4, 48, 4);
  font-size: 30rpx;
  line-height: 40rpx;
}
.detail-paragraph-wrap {
  margin-top: 20rpx;
  padding-bottom: 40rpx;
}
.detail-paragraph {
  margin-top: 20rpx;
  padding: 0 30rpx;
  text-indent: 60rpx;
  color: rgb(4, 48, 4);
  font-size: 30rpx;
  line-height: 40rpx;
}
.is-collection-wrap {
  width: 200rpx;
  height: 200rpx;
  position: fixed;
  bottom: 20rpx;
  left: 30rpx;
}
.is-collection {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, .4);
}
.collection-img {
  width: 50rpx;
  height: 50rpx;
}
.detail-skeleton {
  display: block;
  margin: 0 auto;
  margin-bottom: 50rpx;
  width: 700rpx;
  height: 800rpx;
  /* border: 1px solid #ddd; */
}
.article-detail-cont {
	margin: 0 auto;
	width: 690rpx;
	min-height: 300rpx;
}
.article-detail-title {
	padding: 30rpx 0 10rpx;
	font-size: 40rpx;
	min-height: 100rpx;
}

.article-info {
	font-size: 28rpx;
	color:#666;
}

.article-info-time {
	font-size: 26rpx;
	color:#999;
}

.article-info-left {
	width: 55%;
}

.article-info-numbercont {
	width: 40%;
}

.article-info-zan {
	width: 50%;
}

.article-info-icon {
	margin-right:10rpx;
	width: 28rpx;
	height: 28rpx;
}


.article-content {
	margin-top: 20rpx;
	font-size: 30rpx;
	color:#666;
}

.article-zan {
	margin: 40rpx 0;
	width: 100%;
	height: 100rpx;
}


.article-zan-icon {
	margin-right: 10rpx;
	width: 46rpx;
	height: 46rpx;
}

.article-zan-cont {
	width: 200rpx;
	height: 80rpx;
	border: 2rpx solid #ccc;
	border-radius: 40rpx;
}
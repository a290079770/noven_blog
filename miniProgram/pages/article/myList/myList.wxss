.my-list {
	padding-bottom: 50rpx;
}

.my-list-item {
	margin: 0 auto;
	margin-top: 30rpx;
	width: 690rpx;
	height: 180rpx;
	border: 2rpx solid #ddd;
	box-shadow: 0 5rpx 10rpx rgba(118,143,195,0.2),5rpx 0 10rpx rgba(118,143,195,0.2), 0 -5rpx 10rpx rgba(118,143,195,0.2),-5rpx 0 10rpx rgba(118,143,195,0.2);
}

.my-list-item-cont {
	width: 650rpx;
	height: 140rpx;
}

.my-list-arc {
	flex-direction: column;
	width: 460rpx;
	height: 140rpx;
}

.my-list-arc-title {
	width: 100%;
	font-size: 30rpx;
	color:#333;
}

.my-list-arc-date {
	margin: 10rpx 0;
	width: 100%;
	font-size: 24rpx;
	color:#666;
}


.my-list-arc-cover {
	width: 180rpx;
	height: 140rpx;
}
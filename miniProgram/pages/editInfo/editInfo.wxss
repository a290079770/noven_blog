/* pages/editInfo/editInfo.wxss */
.edit-info-wrap {
  padding: 0 30rpx;
}
.edit-info-wrap textarea {
  min-width: 650rpx;
}
.edit-nickname, .edit-brief {
  margin: 50rpx 0 10rpx;
  padding: 10rpx 20rpx;
  border: 1px solid rgba(216, 130, 130, 0.774);
  border-radius: 10rpx;
  font-size: 28rpx;
  line-height: 40rpx;
}
.text-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx 30rpx;
  font-size: 30rpx;
  color: rgb(75, 6, 10);
}
.current-length {
  color: rgb(211, 27, 27);
}
.submit-btn {
  margin-top: 50rpx;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  letter-spacing: 10rpx;
  background: rgb(223, 76, 76);
  border-radius: 10rpx;
}
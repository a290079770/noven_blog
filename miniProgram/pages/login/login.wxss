page {
  height: 70vh;
}
page, .login-wrap, .login-info, .login-logo {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.login-logo {
  margin-bottom: 50rpx;
}
.logo-img {
  width: 260rpx;
  height: 260rpx;
  border-radius: 50%;
  border: 1px solid rgb(223, 76, 76);
}
.login-info input {
  width: 500rpx;
  height: 70rpx;
  box-sizing: border-box;
  border-bottom: 1px solid rgb(197, 129, 129);
}
.login-info-email, .login-info-password {
  display: flex;
  align-items: center;
}
.login-btn {
  margin-top: 50rpx;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  letter-spacing: 10rpx;
  background: rgb(223, 76, 76);
  border-radius: 10rpx;
}
.shouquan-login {
  position: absolute;
  bottom: 50rpx;
  font-size: 32rpx;
  color: rgba(173, 42, 42, 0.9);
  text-align: center;
}
.shouquan-btn {
  border: none;
  background: none;
  font-size: 30rpx;
  color: rgba(173, 42, 42, 0.9);
  padding: 0;
  line-height: 50rpx;
}
.shouquan-btn::after {
  border: none;
}
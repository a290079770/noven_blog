.article-list-item-wrap {
  padding: 0 30rpx;
  height: 272rpx;
  margin-bottom: 30rpx;
}
.article-list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100%;
  border: 1px solid rgb(204, 122, 135);
  border-radius: 10rpx;
  box-shadow: 0 8rpx 16rpx rgba(241, 136, 136, .3);
}
.article-list-item-left {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 40%;
  height: 100%;
  box-sizing: border-box;
}
.article-list-item-image {
  width: 80%;
  height: 80%;
  border-radius: 10rpx;
  background: #eee;
}
.article-list-item-right {
  padding: 25rpx 20rpx 25rpx 0;
  width: 60%;
  height: 100%;
  box-sizing: border-box;
}
.article-list-item-title-wrap {
  display: flex;
  justify-content: space-between;
  position: relative;
}
.article-list-item-title {
  color: rgb(179, 31, 31);
  /* 2行省略 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.author-info {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: rgb(94, 17, 17);
}
.article-list-item-des {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #666;
  /* 2行省略 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.article-list-item-tongji {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: rgb(156, 35, 35);
}
.collection {
  margin-left: 30rpx;
}
.cancle-icon {
  display: absolute;
  right: 0;
  top: 5rpx;
}
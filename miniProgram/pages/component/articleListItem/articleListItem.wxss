.article-list-item-wrap {
  padding: 20rpx;
  height: 350rpx;
  margin-bottom: 30rpx;
}
.article-list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100%;
  border: 1px solid rgb(204, 122, 135);
  border-radius: 10rpx;
}
.article-list-item-left {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 40%;
  height: 100%;
  box-sizing: border-box;
}
.article-list-item-image {
  width: 80%;
  height: 80%;
}
.article-list-item-right {
  padding: 30rpx;
  width: 60%;
  height: 100%;
  box-sizing: border-box;
}
.article-list-item-title {
  color: rgb(179, 31, 31);
  /* 2行省略 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.article-list-item-des {
  margin: 20rpx 0;
  font-size: 30rpx;
  color: #666;
  /* 2行省略 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.article-list-item-tongji {
  font-size: 28rpx;
  color: rgb(156, 35, 35);
}
.collection {
  margin-left: 30rpx;
}
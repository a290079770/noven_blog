<!--index.wxml-->
<view>
  <!-- 标题 -->
  <view class="title-wrap">
    <view class="logo"><image class="logo-img" src="/images/n1.png" /></view>
    <view class="title-text">{{title}}</view>
  </view>
  <!-- 轮播图 -->
  <view class="banner">
    <swiper class="slide-wrap pd-left20 pd-right20" indicator-dots="{{indicatorDots}}" indicator-color="{{indicatorColor}}"
      indicator-active-color="{{indicatorActiveColor}}"
      autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
      <block wx:for="{{imgUrls}}" wx:key="{{index}}">
        <swiper-item>
          <image src="{{item}}" class="slide-image"/>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <!-- 文章列表 -->
  <view>
    <article-item></article-item>
  </view>
</view>

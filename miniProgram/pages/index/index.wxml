<!--index.wxml-->
<view class="index header-bg" style="background: url(http://y.photo.qq.com/img?s=reDE6epJl&l=y.jpg);">
   <view class="flex flex-justify-center index-header header-bg" style="background: url(http://y.photo.qq.com/img?s=DlSjzF7V8&l=y.jpg) no-repeat">
     <!-- 顶部胶囊 -->
     <view class="flex flex-align-center top-capsule" style="top:{{sysType}}rpx">
       <text class="top-capsule-text"> Noven 博客 </text>    
     </view>

     <!-- 标题 -->
     <view class="flex flex-justify-center flex-align-center index-title index-title1">
       <image src="../../images/myl.jpg" class="index-title-image1"></image>
     </view>
   </view>
     
   
   <view class="swiper-container"> 
     <swiper 
     indicator-dots="true" 
     autoplay="true" 
     interval="4000"
     indicator-color="#b9b9b9"
     indicator-active-color="#d13954"
     >
        <block wx:for="{{imgUrls}}" wx:key="{{index}}">
          <swiper-item>
            <view class="swiper-item-cont" style="background: url({{item}});"></view> 
          </swiper-item>
        </block>
      </swiper>
   </view>
   
   <!-- 标题 -->
   <view class="flex flex-justify-center flex-align-center index-title">
     <image src="../../images/hotarc.jpg" class="index-title-image"></image>
   </view>

   <!-- 文章 -->
   <view class="index-article-cont">
     <articleItem
      wx:for="{{hotArticleList}}" 
      wx:key="article{{index}}"
      item="{{item}}"
      isBorderBottomShow="{{index == hotArticleList.length - 1 ? false : true}}"
      bind:handleClick="handleArticleClick"
      data-item="{{item}}"
     />
   </view>

   <view class="flex flex-align-center flex-justify-center index-more" bindtap="goToArticleList"> 
     更多 <view class="arrow-right"></view>  
   </view>


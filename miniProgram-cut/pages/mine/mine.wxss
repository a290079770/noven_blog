/*头像区样式*/
.mine-info-wrap {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.mine-info-wrap {
  height: 300rpx;
  margin-bottom: 30rpx;
  /* border-bottom: 1px solid rgb(204, 122, 135); */
}
.mine-info-img-wrap, .nick-name-wrap, .current-time-wrap, .mine-info-img-box {
  display: flex;
  justify-content: center;
  align-items: center;
}
.mine-info-img-wrap {
  margin-left: 50rpx;
}
.mine-info-img-box {
  width: 210rpx;
  height: 210rpx;
  border-radius: 50%;
  border: 1px solid rgb(204, 122, 135);
  box-shadow: 0 8rpx 16rpx rgba(241, 136, 136, .3);
}
.mine-info-img, .text-upload-touxiang {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  /* border: 1px solid rgb(204, 122, 135); */
}
.text-upload-touxiang {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  color: rgb(204, 102, 119);
  /* background: #efefef; */
}
.nick-name-wrap {
  margin-left: 50rpx;
  flex-direction: column;
  font-size: 36rpx;
  color: rgba(172, 5, 33, 0.8);
}
.current-time-wrap {
  flex-direction: column;
  margin-top: 20rpx;
  padding: 15rpx 50rpx;
  font-size: 30rpx;
  color: rgb(204, 102, 119);
  box-sizing: border-box;
  border-radius: 50rpx;
  border: 1px solid rgb(204, 122, 135);
}
.address-icon {
  width: 30rpx;
  height: 30rpx;
}

/*列表区样式*/
.about-me {
  padding: 0 30rpx 50rpx;
  font-size: 30rpx;
  color: #666;
}
.list-item {
  margin-top: 30rpx;
  padding: 20rpx;
  border: 1px solid rgba(204, 122, 135, .3);
  border-radius: 10rpx;
  box-shadow: 0 8rpx 16rpx rgba(241, 136, 136, .3);
}
.item-title {
  font-size: 32rpx;
  text-align: center;
}
.item-content {
  margin-top: 20rpx;
  text-indent: 60rpx;
  line-height: 60rpx;
}
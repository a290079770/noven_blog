.search-box {
  min-height: 100vh;
}
.search-wrap {
  position: relative;
  padding: 16rpx 20rpx;
  color: #666;
  border-bottom: 1px solid #e7e7e7;
}
.search-icon {
  position: relative;
  left: 25rpx;
  top: 15rpx;
}
.search-input {
  flex: 1;
  margin-left: -25rpx;
  padding-left: 60rpx;
  height: 60rpx;
  background: #efefef;
  border-radius: 8rpx;
}
.cancle {
  margin-left: 20rpx;
  line-height: 60rpx;
}

.search-article-list {
  padding: 0 30rpx;
}

.search-notice {
  padding: 10rpx 25rpx;
}

.search-clear {
  position: relative;
  z-index: 2;
  margin-left: -7rpx;
  width:60rpx;
  height: 60rpx;
  background: #efefef;
  border-radius: 0 8rpx 8rpx 0;
}

.search-clear-icon {
  width: 28rpx;
  height: 28rpx;
}

.search-article-list-nodata {
  height: 60vh;
}

.search-article-list-nodata-icon {
  margin-bottom: 20rpx;
  height: 128rpx;
  width: 128rpx;
}
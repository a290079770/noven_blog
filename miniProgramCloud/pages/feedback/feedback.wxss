.updateinfo-cont {
  margin: 0 auto;
  width: 715rpx;
  min-height: 100rpx;
}

.placeholder-class {
  font-size: 24rpx;
  color:#999;
}

.updateinfo-abstract {
  margin: 50rpx 0;
  height: 470rpx;
  width: 100%;
  border:2rpx solid #ccc;
  border-radius: 10rpx;
  overflow: hidden;
}

.updateinfo-submit {
  color:white;
  background: #768fc3;
}

.updateinfo-nickname-textarea {
  width: 660rpx;
  height: 260rpx;
  padding: 20rpx;
  font-size: 24rpx;
}

.feed-img {
  width: 100%;
  height: 100%;
}

.feed-pics {
  width: 700rpx;
  height: 150rpx;
}

.feed-pic {
  position: relative;
  margin-left: 20rpx;
  width: 150rpx;
  height: 150rpx;
  border: 1px solid #ccc;
}

.camera-pic {
  border: 1px dashed #ccc;
}

.camera {
  margin-bottom: 5rpx;
  width: 64rpx;
  height: 64rpx;
}

.feed-close {
  position: absolute;
  z-index: 2;
  right: -30rpx;
  top: -30rpx;
  width:60rpx;
  height: 60rpx;
}

.feed-close-icon {
  width: 36rpx;
  height: 36rpx;
}












